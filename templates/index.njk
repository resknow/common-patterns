{% from "macros/tag/macro.njk" import tag %}
{% from "macros/tabs/macro.njk" import tabs %}
{% from "macros/accordion/macro.njk" import accordion %}
{% from "macros/button/macro.njk" import button %}
{% from "macros/character-count/macro.njk" import characterCount %}

<section class="block-area">
    <header class="flow flow-space-3 py-12">
        <h1>Common UI Patterns</h1>
        <p class="c-gray-70">A collection of common UI patterns, built with AlpineJS, delivered as Macros to be used with Nunjucks or Twig.</p>
        <nav>
            <ul class="cluster">
                <li><a href="#accordion">Accordion</a></li>
                <li><a href="#button">Button</a></li>
                <li><a href="#character-count">Character Count</a></li>
                <li><a href="#tag">Tag</a></li>
                <li><a href="#tabs">Tabs</a></li>
            </ul>
        </nav>
    </header>
    <main class="flow flow-space-20 mw-md py-16">
        <div id="accordion" class="flow">
