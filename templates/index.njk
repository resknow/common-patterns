            {{ button({
                tag: 'a',
                href: '#',
                content: 'Click me'
            }) }}
        </div>

        <div id="character-count" class="flow">
            <h2 class="h4">Character Count</h2>
            <div class="flow flow-space-1">
                <input type="text" id="input">
